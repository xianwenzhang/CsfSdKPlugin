<?xml version="1.0" encoding="utf-8"?><!-- 最新动态新闻item界面布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_realtimeitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/tv_itemtitle"
        android:layout_width="@dimen/zerodp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:textColor="@color/ced4da"
        android:textSize="@dimen/eleven" />

    <com.csf.csflibrary.view.myatotextview.AutofitTextView
        android:id="@+id/tv_itmeprice"
        android:layout_width="@dimen/zerodp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:paddingRight="@dimen/halfmiddle_bg"
        android:singleLine="true"
        android:textColor="@color/acb7c1"
        android:textSize="@dimen/eleven"
        autofit:minTextSize="6sp" />


    <com.csf.csflibrary.view.myatotextview.AutofitTextView
        android:id="@+id/tv_itmecount"
        android:layout_width="@dimen/zerodp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:paddingRight="@dimen/halfmiddle_bg"
        android:singleLine="true"
        android:textColor="@color/acb7c1"
        android:textSize="@dimen/eleven"
        autofit:minTextSize="6sp" />

</LinearLayout>